#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#: include Login.kv
#: include TradingWindow.kv
#: include PriceAutoUpdater.kv
#: include History.kv
#: include SettingsScreen.kv
#: include TradingParameters.kv

<ScreenManagement>:
    transition: FallOutTransition()
    LoginScreen:
    TradingWindow:
    TradingParameters:
    History:
    PriceAutoUpdater:
    SettingsScreen:

<DefaultScreen@FloatLayout>:
    FloatLayout:
        TopHalfBackground:
            pos_hint: {'x': 0, 'top': 1}
            size_hint: 1, 1
        BottomHalfBackground:
            pos_hint: {'x': .01, 'top': .72}
            size_hint: .98, .71
        Image:
            source: '/Users/chris/Desktop/Surran Programs/Fut/Python GUI FUT/images/bannerHead.jpg'
            pos_hint: {'x': .01, 'top': .99}
            size_hint: .98, .26
            allow_stretch: True
            keep_ratio: False
        Image:
            source: '/Users/chris/Desktop/Surran Programs/Fut/Python GUI FUT/images/FIFA_18_Logo.png'
            color: 1, 1, 1, .5
            pos_hint: {'top': .87}

        ScreenChangeButton:
            text: 'Trading Window'
            pos_hint: {'x': .1, 'top': .8}
            on_release: app.root.current = 'TradingWindow'
        ScreenChangeButton:
            text: 'Trading Parameters'
            pos_hint: {'x': .25, 'top': .8}
            on_release: app.root.current = 'TradingParameters'
        ScreenChangeButton:
            text: 'History'
            pos_hint: {'x': .4, 'top': .8}
            on_release: app.root.current = 'History'
        ScreenChangeButton:
            text: 'Price AutoUpdater'
            pos_hint: {'x': .55, 'top': .8}
            on_release: app.root.current = 'PriceAutoUpdater'
        ScreenChangeButton:
            text: 'Settings'
            pos_hint: {'x': .7, 'top': .8}
            on_release: app.root.current = 'SettingsScreen'
        ScreenChangeButton:
            text: 'Logout'
            pos_hint: {'x':.905 , 'top': .715}
            size_hint: (.08, .04)
            on_release: app.root.logout()



<Row1@BoxLayout>: ## used as the view for recycle lists
    value: ''
    Label:
        text: root.value
        halign: 'left'
        text_size: self.size
        font_size: '12sp'
        color: 0, 0, 0, 1
        padding: 20, 0

<Row@BoxLayout>: ## used as the view for recycle lists
    value: ''
    Label:
        text: root.value
        halign: 'left'
        text_size: self.size
        font_size: '12sp'
        color: 0, 0, 0, 1
        padding: 20, 0

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (0, 0.9, .1, .3) if self.selected else (1, 1, 1, .7)
        Rectangle:
            pos: self.pos
            size: self.size

<ScreenChangeButton@Button>:
    font_size: 20
    bold: True
    color: 0,0,0,1
    text_size: self.size
    size_hint: (.1, .04)
    valign: 'center'
    halign: 'center'
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: (180/255, 180/255, 180/255, .9) if self.state == 'normal' else (0, .7, .7, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25]

<TopHalfBackground@Widget>:
    canvas.before:
        Color:
            rgba: 105/255, 105/255, 105/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

<BottomHalfBackground@Widget>:
    canvas.before:
        Color:
            rgba: 176/255, 196/255, 222/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

